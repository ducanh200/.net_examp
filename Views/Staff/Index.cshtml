@model List<EXAMP.Entities.Product>
@{

}
<H1>Product Page</H1>
<a asp-controller="Product" asp-action="Create" class="btn btn-primary"> Create new Product</a>
<div class="col-6">
    <table class="table">
        <thead>
        <th>ID</th>
        <th>Name</th>
        <th>age</th>
        <th>email</th>
        <th>Department</th>
        <th></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.name</td>
                    <td>@item.age</td>
                    <td>@item.email</td>
                    <td>@item.department</td>

                    <td>

                        <a href="@Url.ActionLink("Edit","Staff",new{id=item.id})"
                           class="btn btn-primary">Edit</a>
                    </td>

                    <td>

                        <a href="@Url.ActionLink("Delete","Staff",new{id=item.id})"
                           onclick="return confirm('Bạn muốn xóa sản phẩm @item.name')"
                           class="btn btn-primary">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>